@model IEnumerable<ChoiseManagement.Models.Hotel.Order>

@{
    ViewBag.Title = "ViewOrder";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Order Items</h2>

<p>
  
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Food_Items.Item_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Food_Items.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_Portion_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_Item_Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Food_Items.Item_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Food_Items.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item_Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item_Portion_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total_Item_Price)
        </td>
        <td>
           
            @Html.ActionLink("Delete", "DeleteItem", new { id=item.Item_Id })
        </td>
    </tr>
}

</table>
