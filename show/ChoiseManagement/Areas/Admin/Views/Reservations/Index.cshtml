    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Guest_Details.Guest_Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Package.Package_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room.Room_Catagorys.Room_Catogory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room.Room_Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Check_In)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Check_Out)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adults)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Childrens)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Reservation_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Reservation_Id }) |
